            <!-- Your existing layout elements -->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEditProf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/unchanged"
                android:text="Sửa hồ sơ"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="12dp"
                style="@android:style/Widget.Button"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/purple_light"
                app:layout_constraintEnd_toStartOf="@id/btnLogout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogout"
                style="@android:style/Widget.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/purple_light"
                android:text="Đăng xuất"
                android:textColor="@color/unchanged"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnEditProf"
                app:layout_constraintTop_toBottomOf="@id/linearLayout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnIntroduction"
                style="@android:style/Widget.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/purple_light"
                android:text="Giới thiệu về RakkiiBookstore"
                android:textColor="@color/unchanged"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnEditProf" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>