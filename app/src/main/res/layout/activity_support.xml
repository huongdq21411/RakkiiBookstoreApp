<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupportActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtShippingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chính sách vận chuyển"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/purple_Dark"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imvArrowDown1"
            app:layout_constraintBottom_toBottomOf="@+id/imvArrowDown1"/>
        
        <ImageView
            android:id="@+id/imvArrowDown1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtShippingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtShippingTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="20dp"
            android:text="@string/shipping_policy"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtWarrantyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chính sách bảo hành"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/purple_Dark"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imvArrowDown2"
            app:layout_constraintBottom_toBottomOf="@+id/imvArrowDown2" />

        <ImageView
            android:id="@+id/imvArrowDown2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtShippingContent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtWarrantyContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtWarrantyTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="20dp"
            android:text="@string/warranty_policy"
            android:visibility="gone"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>